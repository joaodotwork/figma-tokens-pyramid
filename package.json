{
  "name": "@joaodotwork/figma-tokens-pyramid",
  "version": "0.1.1",
  "description": "Extract, transform, and build design tokens from Figma Variables API",
  "type": "module",
  "main": "./src/index.js",
  "bin": {
    "figma-tokens": "./bin/figma-tokens.js"
  },
  "exports": {
    ".": {
      "import": "./src/index.js"
    },
    "./config": "./src/config/loader.js",
    "./builders/*": "./src/builders/*.js"
  },
  "files": [
    "src",
    "bin",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "node --watch bin/figma-tokens.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.js\""
  },
  "keywords": [
    "figma",
    "design-tokens",
    "design-system",
    "tokens",
    "figma-variables",
    "style-dictionary",
    "css-variables",
    "react-native"
  ],
  "author": "joaodotwork",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/joaodotwork/figma-tokens-pyramid.git"
  },
  "bugs": {
    "url": "https://github.com/joaodotwork/figma-tokens-pyramid/issues"
  },
  "homepage": "https://github.com/joaodotwork/figma-tokens-pyramid#readme",
  "dependencies": {
    "archiver": "^7.0.1",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "dotenv": "^16.4.7",
    "inquirer": "^9.2.15",
    "node-fetch": "^3.3.2",
    "ora": "^8.0.1"
  },
  "peerDependencies": {
    "style-dictionary": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "style-dictionary": {
      "optional": true
    }
  },
  "devDependencies": {
    "vitest": "^1.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
